---
// Define the array of projects directly in the frontmatter script.
const otherprojects = [
  {
    "url": "branding",
    "title": "Branding",
    "description": "Diseño de identidades visuales y demás requerimientos."
  },
  {
    "url": "diseño",
    "title": "Comunicación y diseño",
    "description": "Creación de carteles para eventos y distintos eventos."
  },
  {
    "url": "redes-sociales",
    "title": "Redes Sociales",
    "description": "Creación de contenido para redes sociales."
  },
  {
    "url": "fotografia",
    "title": "Fotografía",
    "description": "Un pequeño lugar para enseñar mi fotografía como hobby."
  }
];

// Function to calculate `data-aos-duration` based on index
function calculateAosDuration(index) {
  return 1500 + index * 500; // Example: Increment duration by 500ms for each project
}
---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-32">
    <div class="space-y-2">
      <!-- Section Title and Decorative Elements -->
      <div
        class="h-0.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="1000"
      >
      </div>
      <h3
        class="text-secondary text-base font-medium"
        data-aos="fade-up"
        data-aos-duration="1500"
      >
        <span>Mis</span>
        <span class="font-bold">proyectos</span>
      </h3>
    </div>

    <ul
      class="mx-auto grid grid-cols-1  sm:grid-cols-2 text-secondary md:grid-cols-3 lg:grid-cols-4 items-start gap-6 mt-32"
      role="list"
    >
      {
        otherprojects.map((project, index) => (
          <li
            class="flow-root h-full"
            data-aos="fade-up"
            data-aos-duration={calculateAosDuration(index)}
          >
            <a href={"project/" + project.url}>
              <div class="h-full flex flex-col justify-between">
                <div>
                  <p class="group-hover:text-secondary/70 text-secondary text-9xl font-black lg:rotate-90 xl:-translate-x-28 lg:-translate-x-16 lg:mb-8 xl:mb-0  lg:pb-8">
                    0{index + 1}.
                  </p>
                  <p class="italic shrink-0">{project.title}</p>
                  <p class="text-base mt-3 leading-relaxed">
                    {project.description}
                  </p>
                </div>
                <div>
                  <p class="mt-3 text-base font-semibold">
                    Ver más &nbsp; ↗
                  </p>
                </div>
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>
