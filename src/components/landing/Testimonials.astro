---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-6">
    <div class="mt-6 space-y-2">
      <div class="h-0.5 bg-secondary"></div>
      <h3 class="text-secondary text-base font-medium">
        <span>Mi</span>
        <span class="font-bold">formación</span>
      </h3>
      <div class="h-1.5 bg-secondary"></div>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-5 text-secondary gap-6 pt-2 mt-2">
      {
        experiences.map((description) => (
         <div>
            <p class="italic text-2xl block font-bold">
              {description.name}
            </p>
            <small> {description.year}</small>
            <p class="text-sm leading-relaxed mt-6">
              {description.description}
            </p>
            <p class="text-xs leading-relaxed mt-6">
              {description.longDescription}
            </p>
         </div>
        ))
      }
    </div>
  </div>
</section>
